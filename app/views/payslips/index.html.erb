<h1>All the payslips</h1>
<%if @payslip.count == 0 %>
	<p>No payslips yet</p>
<% else %>
<table class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
		<th>LR Number</th>
		<th>LR made for</th>
		<th>LR amount</th>
		<th>Source</th>
		<th>Paid at</th>
		<th>Contact Person</th>
		<th>Phone</th>
		<th>Date</th>
		<th>Payment Status</th>
		<th>Actions</th>
		</tr>
	</thead>
		<% if @payslip.count >0 %>
			<% @payslip.each do |t| %>
			<tr>
						<td><%= link_to t.payslipnum, "/payslips/#{t.id}/show" %></td>
						<td><%= t.party %></td>
						<td><%= t.source %></td>	
						<td><%= t.lramount %></td>	
						<td><%= t.paid_at %></td>
						<td><%= t.contactperson %></td>
						<td><%= t.contactphone %></td>
						<td><%= t.created_at.to_date %></td>
						<td><%= t.status %></td>
						<td><%= link_to "Edit", "/payslips/#{t.id}/edit" %>/<%= link_to "Delete", "/payslips/#{t.id}", :method => 'DELETE' %></td>
					</tr>
					
			<% end %>
		<% end %>	
<% end %>
</table>
