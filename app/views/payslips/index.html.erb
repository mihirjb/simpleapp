<h1>All the payslips</h1>
<%if @payslip.count == 0 %>
	<p>No payslips yet</p>
<% else %>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
		<th>Payslip Number</th>
		<th>Payslip made for</th>
		<th>Created at destination</th>
		<th>Paid at</th>
		<th>Payment Status</th>
		</tr>
	</thead>
		<% if @payslip.count >0 %>
			<% @payslip.each do |t| %>
			<tr><td>
					<%= link_to t.payslipnum, "/payslips/#{t.id}/show" %></td><td>
					<%= t.party %></td>
						<td>
						<%= t.source %></td>	<td>
							<%= t.paid_at %></td><td>
					<%= t.status %></td></tr>
			<% end %>
		<% end %>	
<% end %>
</table>
